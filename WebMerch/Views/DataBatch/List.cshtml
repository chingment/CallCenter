@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">

    var listTable;

    $(document).ready(function () {
        listTable = $("#list_table").loadDataTable({
            url: "/DataBatch/GetList",
            pageIndex: 0,
            searchParams: $("#form1").serializeArray(),
            searchButtonId: "btn_Search",
            containerId: "form1",
            rowDataCombie: function (p_index, p_row) {
                var l_Strlimt = "";
                l_Strlimt += "@Html.IsInPermission("<a href=\\\"javascript:void(0)\\\" operate=\\\"edit\\\"   class=\\\"a-btn a-btn-edit\\\"  >修改</a>")";
                var l_StrRows = "";
                l_StrRows += "<tr>";
                l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                l_StrRows += "<td class=\"overflow tipitem\" title=\"" + p_row.code + "\"   >" + p_row.code + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.name + "\">" + p_row.name + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.soureName + "\">" + p_row.soureName + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.startTime + "\">" + p_row.startTime + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.endTime + "\">" + p_row.endTime + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.validCount + "\">" + p_row.validCount + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.inValidCount + "\">" + p_row.inValidCount + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.statusName + "\">" + p_row.statusName + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.createTime + "\">" + p_row.createTime + "</td>";
                l_StrRows += "<td class=\"operation\">";
                l_StrRows += l_Strlimt;
                l_StrRows += "</td>";
                l_StrRows += "</tr>";
                return l_StrRows;
            },
            operate: {
                "edit": function (obj) {
                    var url = '/User/Edit?id=' + obj.id;
                    var title = '修改';
                    art.dialog.open(url, {
                        id: "openDialog", title: title, width: '650px', height: '500px', lock: true, drag: false, cancelVal: '关闭', cancel: true, okVal: '保存', ok: function () {
                            this.iframe.contentWindow.edit();
                            return false;
                        }
                    });
                }
            }
        });

        $("#btn_Add").click(function () {
            var url = '/DataBatch/AddByFile';
            var title = '新建';
            art.dialog.open(url, {
                id: "openDialog", title: title, width: '650px', height: '500px', lock: true, drag: false, cancelVal: '关闭', cancel: true, okVal: '确定', ok: function () {
                    this.iframe.contentWindow.add();
                    return false;
                }
            });
        });

    });

    function refresh(type) {
        switch (type) {
            case 1:
                listTable.loadData();
                break;
            case 2:
                listTable.loadData("c");
                break;
        }
    }


</script>

<form id="form1" name="form1">
    <div class="search-bar">
        <div class="filter">
            <span class="filter-label">批次号：</span>
            <span class="filter-input">
                <input type="text" class="input-control" name="Code" style="width:120px;" />
            </span>
        </div>


        <div class="filter"><input type="button" class="btn btn-search" id="btn_Search" value="查询" /> </div>

        <div class="filter" style="float:right">
            <input type="button" class="btn btn-add" id="btn_Add" value="新建" />
        </div>
    </div>
    <div class="list">
        <table id="list_table" class="list-tb" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th style="width:5%" class="no">
                        序号
                    </th>
                    <th style="width:10%">
                        批次号
                    </th>
                    <th style="width:10%">
                        标题
                    </th>
                    <th style="width:10%">
                        来源
                    </th>
                    <th style="width:10%">
                        开始时间
                    </th>
                    <th style="width:10%">
                        结束时间
                    </th>
                    <th style="width:5%">
                        有效
                    </th>
                    <th style="width:5%">
                        无效
                    </th>
                    <th style="width:10%">
                        状态
                    </th>
                    <th style="width:10%">
                        创建时间
                    </th>
                    <th style="width:5%" class="operation">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="11">
                        <div class="pull-left">
                            <span class="load-tip"></span>
                        </div>
                        <div class="pull-right pagination">
                            <div class="pagination-info">

                            </div>
                            <div class="pagination-index">

                            </div>
                            <div class="pagination-goto">

                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</form>

