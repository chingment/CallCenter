@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var id = $.lumos.getUrlParamValue("id");

        $(this).ready(function () {
            getDetails();

            $('[operate=play]').live('click', function () {
                var recordFile=$(this).attr("file");
                var audio = $("#audior");
                $(audio).attr("src", recordFile)
                audio.paused && (audio.play())
                alert(recordFile)
            });
        });

        function getDetails() {

            $.lumos.getJson({
                url: "/CallResultRecord/GetDetails",
                urlParams: { id: id },
                isUseHandling: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var data = d.data;

                        $('#lbl_CustomerName').text(data.customerName);
                        $('#lbl_PhoneNumber').text(data.phoneNumber);
                        $('#lbl_ResultName').text(data.resultName);
                        $("#lbl_NextCallTime").text(data.nextCallTime);
                        $("#lbl_Remark").text(data.remark);
                        $("#lbl_SalesmanName").text(data.salesmanName);


                        $.each(data.callRecords, function (p_index, p_row) {

                            var l_StrRows = "";
                            l_StrRows += "<tr>";
                            l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                            l_StrRows += "<td class=\"overflow tipitem\" title=\"" + p_row.customerName + "\"   >" + p_row.customerName + "</td>";
                            l_StrRows += "<td class=\"overflow\" title=\"" + p_row.phoneNumber + "\">" + p_row.phoneNumber + "</td>";
                            l_StrRows += "<td class=\"overflow\" title=\"" + p_row.startTime + "\">" + p_row.startTime + "</td>";
                            l_StrRows += "<td class=\"overflow\" title=\"" + p_row.byeTime + "\">" + p_row.byeTime + "</td>";
                            l_StrRows += "<td class=\"overflow\" title=\"" + p_row.timeLength + "\">" + p_row.timeLength + "</td>";
                            l_StrRows += "<td class=\"overflow\" title=\"" + p_row.salesmanName + "\">" + p_row.salesmanName + "</td>";
                            l_StrRows += "<td class=\"operation\">";

                            if (!$.lumos.isNullOrEmpty(p_row.recordFile)) {
                                l_StrRows += "<a href=\"javascript:void(0)\" operate=\"play\"  file=\"" + p_row.recordFile + "\"  class=\"a-btn a-btn-edit\"  >播放</a>";
                            }
                          
                            l_StrRows += "</td>";
                            l_StrRows += "</tr>";

                            $("#list_table_callRecord tbody").append(l_StrRows);

                        });

                    }
                }
            });
        }

    </script>
}


<div class="gbr-row gbr-dialog">
    <div class="tab" id="tab1">
        <div class="tab-item">
            <ul>
                <li class="item first selected"><a class="a-btn-info" href="javascript:void(0)">通话结果</a></li>
