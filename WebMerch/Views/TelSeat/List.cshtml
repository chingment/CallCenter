@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">

    var listTable;

    $(document).ready(function () {

        listTable = $("#list_table").loadDataTable({
            url: "/TelSeat/GetList",
            pageIndex: 0,
            searchParams: $("#form1").serializeArray(),
            searchButtonId: "btn_Search",
            containerId: "form1",
            rowDataCombie: function (p_index, p_row) {
              
                var l_StrRows = "";
                l_StrRows += "<tr>";
                l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";
                l_StrRows += "<td class=\"overflow tipitem\" title=\"" + p_row.account + "\"   >" + p_row.account + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.password + "\">" + p_row.password + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.statusName + "\">" + p_row.statusName + "</td>";
                l_StrRows += "<td class=\"overflow\" title=\"" + p_row.userName + "\">" + p_row.userName + "</td>";
                l_StrRows += "</tr>";
                return l_StrRows;
            }
        });
    });

    function refresh(type) {
        switch (type) {
            case 1:
                listTable.loadData();
                break;
            case 2:
                listTable.loadData("c");
                break;
        }
    }


</script>

<div class="gbr-row gbr-page">

    <form id="form1" name="form1">
        <div class="search-bar">
            <div class="filter">
                <span class="filter-label">话机账号：</span>
                <span class="filter-input">
                    <input type="text" class="input-control" name="Account" style="width:120px;" />
                </span>
            </div>
            <div class="filter">
                <span class="filter-label">使用账号：</span>
                <span class="filter-input">
                    <input type="text" class="input-control" name="UserName" style="width:120px;" />
                </span>
            </div>
            <div class="filter"><input type="button" class="btn btn-search" id="btn_Search" value="查询" /> </div>
        </div>
        <div class="list">
            <table id="list_table" class="list-tb" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th style="width:25px" class="no">
                            序号
                        </th>
                        <th style="width:25%">
                            话机账号
                        </th>
                        <th style="width:25%">
                            话机密码
                        </th>
                        <th style="width:25%">
                            状态
                        </th>
                        <th style="width:25%">
                            使用账号
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <td colspan="5">
                            <div class="pull-left">
                                <span class="load-tip"></span>
                            </div>
                            <div class="pull-right pagination">
                                <div class="pagination-info">

                                </div>
                                <div class="pagination-index">

                                </div>
                                <div class="pagination-goto">

                                </div>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </form>

</div>